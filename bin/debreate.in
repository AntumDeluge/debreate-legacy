import os, sys;

from modules.main import *;

# Makefile will change this
INSTALLED = False;

if (INSTALLED):
    PREFIX = '/usr/local';
    DATADIR = '%s/share/debreate' % PREFIX;
    CONFIGDIR = DATADIR;
else:
    SCRIPT = os.path.splitext(os.path.basename(__file__))[0];
    PREFIX = os.path.dirname(os.path.dirname(os.path.abspath(__file__)));
    DATADIR = '{}/src'.format(PREFIX);
    CONFIGDIR = '{}/data'.format(PREFIX);

sys.path.append(DATADIR);

import modules.constants as constants;

from modules.constants import DEBUG, TESTING;

constants.PREFIX = PREFIX;
constants.DATADIR = DATADIR;
constants.STANDARD_CONFIG = '{}/config'.format(CONFIGDIR);
constants.INSTALLED = INSTALLED;
constants.InitConstants();

if (TESTING):
    from tests.tests import RunTests;

    testlist = ['ConfigParseTest'];
    RunTests(testlist);
    sys.exit(0);

if (__name__ == '__main__'):
    Debreate = DebreateApp();
    Debreate.OnInit();
